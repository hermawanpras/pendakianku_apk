<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="14dp"
    tools:context=".RegistrasiPendakianActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Data Identitas Leader"
            android:fontFamily="@font/open_sans_semi_bold"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="left">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Leader :"
                android:fontFamily="@font/open_sans_regular"/>
            <EditText
                android:id="@+id/nama_leader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nama leader"
                android:fontFamily="@font/open_sans_regular"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="left">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. Identitas Leader :"
                android:fontFamily="@font/open_sans_regular"/>
            <EditText
                android:id="@+id/no_identitas_leader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="no. identitas leader"
                android:fontFamily="@font/open_sans_regular"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="left">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Kelamin :"
                android:fontFamily="@font/open_sans_regular"/>
            <Spinner
                android:id="@+id/jk_leader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="left">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat Leader :"
                android:fontFamily="@font/open_sans_regular"/>
            <EditText
                android:id="@+id/alamat_leader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="alamat leader"
                android:fontFamily="@font/open_sans_regular"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="left">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Lahir :"
                android:fontFamily="@font/open_sans_regular"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/tgl_lahir_leader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tanggal leader"
                    android:fontFamily="@font/open_sans_regular"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_date_range_black_24dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="left">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. Telp :"
                android:fontFamily="@font/open_sans_regular"/>
            <EditText
                android:id="@+id/no_telp_leader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="no. telp"
                android:fontFamily="@font/open_sans_regular"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="left">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Foto Identitas Diri (KTP) :"
                android:fontFamily="@font/open_sans_regular"/>
            <EditText
                android:id="@+id/foto_ktp_leader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foto Identitas Diri"
                android:fontFamily="@font/open_sans_regular"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="left">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Surat Keterangan Kesehatan :"
                android:fontFamily="@font/open_sans_regular"/>
            <EditText
                android:id="@+id/srt_kesehatan_leader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="surat kesehatan leader"
                android:fontFamily="@font/open_sans_regular"/>
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lanjut"/>
    </LinearLayout>
</ScrollView>